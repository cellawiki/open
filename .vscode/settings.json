{
  // General normalizations.
  "files.encoding": "utf8",
  "files.eol": "\n",
  "editor.tabSize": 2,
  "editor.rulers": [80],

  // Auto format on save.
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {"source.organizeImports": "always"},
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[go]": {"editor.defaultFormatter": "golang.go"},
  "[go.mod]": {"editor.defaultFormatter": "golang.go"},

  // File nesting. To enable, you must also
  // enable `"explorer.fileNesting.enabled": true,` in your user settings.
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "package.json": "pnpm-lock.yaml, pnpm-workspace.yaml",
    "pubspec.yaml": "pubspec.lock",
    "tsconfig.json": "tsconfig.*.json",
    "*.ts": "${capture}.test.ts",
    "*.js": "${capture}.js.map",
    "*.cjs": "${capture}.cjs.map"
  },

  // Necessary file type specification.
  "files.associations": {
    "*.cjs.map": "json"
  }
}
